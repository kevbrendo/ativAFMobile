<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/main"
    android:background="@color/colorBG"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textMaisMil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nossa! Foi uma grande jornada até aqui! \nÉ hora de olhar para trás e ver \nquantas histórias você escreveu!"
        android:textSize="22dp"
        android:fontFamily="@font/anton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="124dp"
        android:visibility="invisible"

        >

    </TextView>

    <TextView
        android:id="@+id/textMenosMil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mas já? A viagem mal começou! \nEssa é a beleza da estrada! \nNem toda jornada precisa ser longa!"
        android:textSize="22dp"
        android:fontFamily="@font/anton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        android:layout_marginTop="124dp">

    </TextView>

    <TextView
        android:id="@+id/textMaisDoisMil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mais de dois mil kilometros rodados!\n Que baita viagem!\nAgora é hora de descansar \nE se preparar para a próxima, claro! "
        android:textSize="22dp"
        android:fontFamily="@font/anton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        android:layout_marginTop="124dp">

    </TextView>

    <TextView
        android:id="@+id/textMaisCincoMil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mais de cinco mil kilometros rodados!\n Que baita viagem!\nAgora é hora de descansar \nE se preparar para a próxima, claro! "
        android:textSize="22dp"
        android:fontFamily="@font/anton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        android:layout_marginTop="124dp">

    </TextView>

    <TextView
        android:id="@+id/textMaisDezMil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mais de Dez mil kilometros rodados!\n Isso é INCRÍVEL!\nImagino quando você rodou! \nAgora é se preparar para próxima!"
        android:textSize="22dp"
        android:fontFamily="@font/anton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        android:layout_marginTop="124dp">

    </TextView>

    <TextView
        android:id="@+id/textMaisVinteMil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mais de Vinte mil kilometros rodados!\n Isso é INCRÍVEL!\nImagino quando você rodou! \nAgora é se preparar para próxima!"
        android:textSize="22dp"
        android:fontFamily="@font/anton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        android:layout_marginTop="124dp">

    </TextView>

    <TextView
        android:id="@+id/textEncerramentoViagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encerrar viagem:"
        android:textSize="22dp"
        android:fontFamily="@font/anton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textMenosMil"
        android:visibility="visible"
        android:layout_marginBottom="8dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="!  AVISO  !"
        android:textSize="28dp"
        android:textColor="@color/CHECK"
        android:fontFamily="@font/anton"
        app:layout_constraintBottom_toTopOf="@id/textAviso"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/textMaisVinteMil"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


    </TextView>


    <TextView
        android:id="@+id/textAviso"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_marginBottom="120dp"
        android:fontFamily="@font/anton"
        android:gravity="center"
        android:text="Encerrar uma viagem faz \ncom que o tempo de viagem pare de ser contado, \nmas ainda é possivel adicionar despesas."
        android:textSize="18dp"

        app:layout_constraintBottom_toTopOf="@id/btnEncerrar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textMaisVinteMil"

        >

    </TextView>

    <TextView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Qual a data de encerramento da viagem?"
        android:fontFamily="@font/anton"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/switchData"
        android:layout_marginBottom="-8dp"
        app:layout_constraintTop_toBottomOf="@id/textAviso">


    </TextView>

    <Switch
        android:id="@+id/switchData"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Hoje"
        android:gravity="center"
        android:fontFamily="@font/anton"
        android:textColor="@color/colorPrimary"
        android:textSize="24dp"
        android:checked="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnEncerrar"
        app:layout_constraintTop_toBottomOf="@id/textAviso"
        android:layout_marginTop="74dp"
        android:visibility="visible">

    </Switch>

    <EditText
        android:id="@+id/editDataFinal"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anton"
        android:textColor="@color/colorPrimary"
        android:textSize="22dp"
        android:checked="true"
        android:gravity="center"
        android:hint="Digite a data de encerramento"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnEncerrar"
        app:layout_constraintTop_toBottomOf="@id/textAviso"
        android:layout_marginTop="74dp"
        android:visibility="invisible"/>


    <Button
        android:id="@+id/btnEncerrar"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="528dp"
        android:background="@drawable/button_background_with_shadow"
        android:elevation="8dp"
        android:text="ENCERRAR VIAGEM"
        app:backgroundTint="#AA1106"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textEncerramentoViagem">

    </Button>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="154dp"
        android:alpha="0.2"
        android:src="@drawable/logo_png___copia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAviso" />





</androidx.constraintlayout.widget.ConstraintLayout>